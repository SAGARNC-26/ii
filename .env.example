# Smart Vault CCTV - Environment Configuration
# Copy this file to .env and customize for your deployment

# ===========================
# MongoDB Configuration
# ===========================
MONGO_URI=mongodb://localhost:27017/

# ===========================
# Camera Configuration
# ===========================
# 0 for webcam, or RTSP URL for IP camera
CAMERA_SOURCE=0
CAMERA_ID=cam_01

# ===========================
# Face Recognition
# ===========================
RECOGNITION_MODEL=ArcFace
DETECTION_BACKEND=opencv
MATCH_THRESHOLD=0.40
MULTIFRAME_COUNT=3
PROCESS_EVERY_N_FRAMES=2

# ===========================
# Flask Dashboard
# ===========================
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# CHANGE THESE IN PRODUCTION!
SECRET_KEY=change-this-secret-key-in-production
ADMIN_USER=admin
ADMIN_PASS=changeme

# ===========================
# Performance
# ===========================
USE_GPU=false
FAISS_THRESHOLD=50

# ===========================
# Security
# ===========================
ENABLE_FAIL2BAN=false
ENABLE_SURICATA=false
SURICATA_ALERT_LOG=/var/log/suricata/fast.log

# Whitelisted IPs (comma-separated)
WHITELISTED_IPS=127.0.0.1,::1

# ===========================
# Stream Encryption
# ===========================
ENABLE_ENCRYPTION=false
SRT_PASSPHRASE=

# ===========================
# Email Alerts
# ===========================
# Enable email alerts for unauthorized detections
ENABLE_EMAIL_ALERTS=true

# Gmail credentials (REQUIRED)
EMAIL_SENDER=sagarnc199@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here
EMAIL_RECIPIENT=sagarnc26@gamil.com

# SMTP settings (Gmail default)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Alert cooldown in seconds (avoid spam)
EMAIL_COOLDOWN=300

# Include snapshot in email
EMAIL_INCLUDE_SNAPSHOT=true

# ===========================
# Logging
# ===========================
LOG_LEVEL=INFO
SHOW_DEBUG_WINDOW=true
